    <!-- Screen Action and Intro-->
    <epp:phrase id="Plugin/Screen/EPrint/PCIRequestReview:title">Submit to PCI</epp:phrase>
    <epp:phrase id="Plugin/Screen/EPrint/PCIRequestReview:description">Submit this preprint to a PCI Community for review and potential endorsement.</epp:phrase>

    <epp:phrase id="Plugin/Screen/EPrint/PCIRequestReview:help">
        <p>This preprint can be submitted to a PCI Community for peer review. Once the preprint has been evaluated, the community may endorse the record at which point a banner will be shown on the summary page indicating the endorsement and highlighting it as a "complete, reliable and citable" article.</p>        
        <p>For more information please see <a href="https://peercommunityin.org/" target="_blank">https://peercommunityin.org</a></p>
    </epp:phrase>

    <!-- PCI Status -->
    <epp:phrase id="Plugin/Screen/EPrint/PCIRequestReview:status">Current Status: </epp:phrase>
    <epp:phrase id="Plugin/Screen/EPrint/PCIRequestReview:pci_fail">Request Failed</epp:phrase>
    <epp:phrase id="Plugin/Screen/EPrint/PCIRequestReview:pci_pending">Request Pending</epp:phrase>
    <epp:phrase id="Plugin/Screen/EPrint/PCIRequestReview:pci_Reject">Rejected</epp:phrase>

    <!-- Request Form -->
    <epp:phrase id="Plugin/Screen/EPrint/PCIRequestReview:data">Choose a PCI Review Community</epp:phrase>
    <epp:phrase id="Plugin/Screen/EPrint/PCIRequestReview:data_help">Select a PCI Community to submit to from the dropdown.</epp:phrase>

    <epp:phrase id="pci_review/inbox:label_pci_evolbiol">Peer Community In Evolutionary Biology</epp:phrase>
